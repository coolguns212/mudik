<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView3"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="@drawable/layer1"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/img_detailtempat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_home" />

        <TextView
            android:id="@+id/nama_detailtempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_gravity="left"
            android:text="ATM Mandiri"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"/>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <!-- 2 columns -->
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip" >

                <TextView
                    android:id="@+id/kota_detailtempat0"
                    android:text="Kota"
                    android:layout_weight="0.1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/kota_detailtempat"
                    android:text="Surabaya"
                    android:layout_weight="0.9"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip" >

                <TextView
                    android:id="@+id/alamat_detailtempat0"
                    android:text="Alamat"
                    android:layout_weight="0.1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/alamat_detailtempat"
                    android:text="Surabaya"
                    android:layout_weight="0.9"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip" >

                <TextView
                    android:id="@+id/telepon_detailtempat0"
                    android:text="Telepon"
                    android:layout_weight="0.1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/telepon_detailtempat"
                    android:text="Surabaya"
                    android:layout_weight="0.9"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip" >

                <TextView
                    android:id="@+id/website_detailtempat0"
                    android:text="Website"
                    android:layout_weight="0.1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/website_detailtempat"
                    android:text="Surabaya"
                    android:layout_weight="0.9"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip" >

                <TextView
                    android:id="@+id/fb_detailtempat0"
                    android:text="Facebook"
                    android:layout_weight="0.1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/fb_detailtempat"
                    android:text="Surabaya"
                    android:layout_weight="0.9"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip" >

                <TextView
                    android:id="@+id/email_detailtempat0"
                    android:text="Email"
                    android:layout_weight="0.1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/email_detailtempat"
                    android:text="Surabaya"
                    android:layout_weight="0.9"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>
            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip">

                <TextView
                    android:id="@+id/lat"
                    android:text="Lat"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/log"
                    android:text="Log"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </TableRow>

      </TableLayout>
      <!-- TARUH MAP DISINII-->
    </LinearLayout>
</ScrollView>